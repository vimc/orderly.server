#!/usr/bin/env bash
set -ex
HERE=$(dirname $0)
. $HERE/common

function cleanup {
    echo "Cleaning up"
    rm -f $PACKAGE_ROOT/docker/Dockerfile.test
}
trap cleanup EXIT

cat << EOF > $HERE/Dockerfile.test
FROM $TAG_SHA

RUN install2.r --error \
        mockery \
        covr
COPY . /src
WORKDIR /src
RUN R CMD build .
ENTRYPOINT ["/bin/bash"]
EOF

docker build --pull \
       -t $TAG_SHA \
       -f docker/Dockerfile \
       .

docker build \
      -t $TAG_TESTS \
      -f docker/Dockerfile.test \
      .

# We always push the SHA tagged versions, for debugging if the tests
# after this step fail
docker push $TAG_SHA
docker push $TAG_TESTS
