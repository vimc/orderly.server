{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "WorkflowRunRequest",
    "type": "object",
    "properties": {
        "reports": { "$ref": "WorkflowReports.schema.json" },
        "changelog": {
            "type": "object",
            "properties": {
                "message": { "type": "string" },
                "type": { "type": "string" }
            },
            "required": [ "message", "type" ],
            "additionalProperties": false
        },
        "ref": { "type": "string" }
    },
    "required": ["reports", "ref"],
    "additionalProperties": true
}
