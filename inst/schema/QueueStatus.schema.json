{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "QueueStatus",
    "type": "object",
    "properties": {
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "key": {"type": "string"},
                    "status": {
                        "enum": ["queued", "running", "success", "error", "orphan", "interrupted", "redirect", "missing"]
                    },
                    "name": {"type": "string"}
                },
                "required": ["key", "status", "name"],
                "additionalProperties": false
            }
        }
    },
    "required": [ "tasks" ],
    "additionalProperties": false
}
