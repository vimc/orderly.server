{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "QueueStatus",
    "type": "object",
    "properties": {
        "tasks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "key": {"type": "string"},
                    "status": {
                        "$ref": "TaskStatus.schema.json"
                    },
                    "name": {"type": "string"},
                    "version": {
                        "type": [ "string", "null" ]
                    }
                },
                "required": ["key", "status", "name", "version"],
                "additionalProperties": false
            }
        }
    },
    "required": [ "tasks" ],
    "additionalProperties": false
}
